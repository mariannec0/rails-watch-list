<div class="navbar">
  <div class="nav-title">
    <h1>All Lists</h1>
  </div>
  <div class="nav-btns">
    <%= link_to "My Lists", lists_path, class: "btn btn-secondary" %>
    <%= link_to "New List", new_list_path, class: "btn btn-primary" %>
  </div>
</div>
<h1><%= @list.name %></h1>
<h2>Movies:</h2>
<div class="row">
  <% if @movies.any? %>
    <% @movies.each do |movie| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <%= image_tag movie.poster_url, class: "card-img-top", alt: "#{movie.title} poster" %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="card-text"><strong>Rating:</strong> <%= movie.rating %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-muted">No movies added to the list yet.</p>
  <% end %>
</div>

<%= link_to 'Add Movie', new_list_bookmark_path(@list), class: 'btn btn-primary mt-3' %>
<%= link_to 'Back to list', lists_path, class: 'btn btn-primary mt-3' %>
