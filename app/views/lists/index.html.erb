<div class="navbar">
  <div class="nav-title">
    <h1>All Lists</h1>
  </div>
  <div class="nav-btns">
    <%= link_to "My Lists", lists_path, class: "btn btn-secondary" %>
    <%= link_to "New List", new_list_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <h3>My Lists</h3>
    <ul class="list-group">
      <% @lists.each do |list| %>
        <li class="list-group-item">
          <%= link_to list.name, list_path(list), class: "list-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


